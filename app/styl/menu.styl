.menu
	font-size $fontSize
	display: grid
	grid-template-columns: 7fr   4fr
	padding 10px
	font-family: $fontStyle
	

hr
	width: 85%
	display: block;
	border-width: 2px;
	border-color: black
	border-radius: 500px
.menu__info
	display: grid
	grid-template-columns: 1fr 1fr 1fr 1fr 1fr
	
	align-self: center



.menu__link
	margin: 10px
	&:hover
		color: rgba(10, 31, 103, 0.464)	


.menu__logo
	font-size: $fontSize+10
    

.menu__logo
	img
		width: 50px

a
	text-decoration none
	color: rgb(61, 46, 46)
	font-size $fontSize

	&.active
		color rebeccapurple

@media (max-width : $mw)
	.menu
		grid-template-columns: 1fr 
		grid-template-rows: 1fr 1fr
		text-align: center
		background-color: #fff

	.menu__logo
		text-align: center	
